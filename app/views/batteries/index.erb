<% provide(:title, "Batteries")%>

<h1>Batteries</h1>

<%= link_to "Battery Types", battery_types_path %>

<table>
  <tr>
    <td>
      <h4>LBID</h4>
    </td>
    <td>
      <h4>Last Updated</h4>
    </td>
    <td>
      <h4>Battery Type</h4>
    </td>
    <td>
      <h4>Owner</h4>
    </td>
  </tr>

    <% @batteries.each do |b| %>

	  <tr>
	    <td>
	      <%= link_to b.lbid, b %>
	    </td>
	    <td>
	      <%= b.updated_at.to_formatted_s(:short) %>
	    </td>
	    <td>
	      <%= b.battery_type.name %>
	    </td>
	    <td>
	      <%= link_to b.rider.name, b.rider %>
	    <td>
	      <%= link_to "Edit", edit_rider_battery_path(b.rider_id, b.id) %>
	    </td>
	  </tr>
  
    <% end %>

</table>