<% provide(:title, "Chargers")%>

<h1>Chargers</h1>

<%= link_to "Charger Types", charger_types_path %>

<table>
  <tr>
    <td>
      <h2>LBID</h2>
    </td>
    <td>
      <h2>Last Updated</h2>
    </td>
    <td>
      <h2>Charger Type</h2>
    </td>
    <td>
      <h2>Owner</h2>
    </td>
  </tr>

    <% @chargers.each do |c| %>

	  <tr>
	    <td>
	      <h3><%= link_to c.lbid, c %></h3>
	    </td>
	    <td>
	      <h3><%= c.updated_at.to_formatted_s(:short) %></h3>
	    </td>
	    <td>
	      <h3><%= c.charger_type.name %></h3>
	    </td>
	    <td>
	      <h3><%= link_to c.rider.name, c.rider %></h3>
	    <td>
	      <%= link_to "Edit", edit_rider_charger_path( c.rider_id, c.id ) %>
	    </td>
	  </tr>
  
    <% end %>

</table>